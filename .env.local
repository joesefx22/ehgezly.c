# ====================================
# DATABASE CONFIGURATION
# ====================================
DATABASE_URL="postgresql://username:password@localhost:5432/auth_system?schema=public"

# ====================================
# AUTHENTICATION SECRETS
# ====================================
NEXTAUTH_SECRET="your-super-secure-32-characters-long-secret-key-12345"
JWT_SECRET="another-super-secure-32-characters-long-jwt-secret-key"
JWT_REFRESH_SECRET="yet-another-super-secure-32-characters-refresh-secret"

# ====================================
# APPLICATION SETTINGS
# ====================================
NODE_ENV="development"
APP_URL="http://localhost:3000"
APP_NAME="GameZone Authentication System"

# ====================================
# EMAIL CONFIGURATION (SMTP)
# ====================================
# For development, use Ethereal Email (free):
# 1. Go to: https://ethereal.email/
# 2. Create account
# 3. Copy credentials below

SMTP_HOST="smtp.ethereal.email"
SMTP_PORT="587"
SMTP_USER="your-ethereal-username@ethereal.email"
SMTP_PASS="your-ethereal-password"
SMTP_FROM="noreply@gamezone.com"

# For production (Gmail example):
# SMTP_HOST="smtp.gmail.com"
# SMTP_PORT="587"
# SMTP_USER="your-email@gmail.com"
# SMTP_PASS="your-app-specific-password"
# SMTP_FROM="GameZone <noreply@gamezone.com>"

# ====================================
# RATE LIMITING
# ====================================
RATE_LIMIT_WINDOW_MS="900000"    # 15 minutes in milliseconds
RATE_LIMIT_MAX_REQUESTS="100"    # 100 requests per window

# ====================================
# SECURITY SETTINGS
# ====================================
ACCESS_TOKEN_EXPIRY="15m"        # 15 minutes
REFRESH_TOKEN_EXPIRY="7d"        # 7 days
VERIFICATION_TOKEN_EXPIRY="24h"  # 24 hours
RESET_TOKEN_EXPIRY="1h"          # 1 hour

# ====================================
# PASSWORD POLICY
# ====================================
PASSWORD_MIN_LENGTH="8"
PASSWORD_REQUIRE_UPPERCASE="true"
PASSWORD_REQUIRE_LOWERCASE="true"
PASSWORD_REQUIRE_NUMBER="true"
PASSWORD_REQUIRE_SPECIAL="true"

# ====================================
# LOGGING
# ====================================
LOG_LEVEL="info"  # error, warn, info, debug
LOG_TO_FILE="true"
